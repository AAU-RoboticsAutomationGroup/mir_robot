{
	"name": "ROS Dev",

	"build": {
		"dockerfile": "Dockerfile"
	},

	"workspaceFolder": "/workspace",
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspace/src/,type=bind,consistency=cached",

    "customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-iot.vscode-ros"
			]
		}
	}
}
